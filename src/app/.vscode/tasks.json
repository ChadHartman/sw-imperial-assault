{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "tsc",
            "isShellCommand": true,
            "args": [
                "-p",
                "."
            ],
            "showOutput": "silent",
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "copy",
            "command": "cp",
            "isShellCommand": true,
            "args": [
                "../../app/assets/js/app.d.ts",
                "../api/app.d.ts"
            ],
            "showOutput": "silent"
        }
    ]
}